<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Papaya.MainPage">

    <ContentPage.Content>
        <Grid>
            <Image Source="login.jpg"  Aspect="AspectFill"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="logo.png" WidthRequest="120" HeightRequest="180" Margin="0, 50, 0, 50" />

                <StackLayout Grid.Row="1" Padding="30,20">
                    <Entry Keyboard="Email" Placeholder="Correo" PlaceholderColor="White" TextColor="White" x:Name="txtCorreo" />
                    <Entry Placeholder="Contraseña" PlaceholderColor="White" TextColor="White" x:Name="txtPassword" IsPassword="True" />
                    <Button Text="Iniciar sesion" x:Name="btnLogin" BackgroundColor="#4ecdc4" CornerRadius="10" TextColor="White" Clicked="btnLogin_Clicked"/>
                    <Button Text="Registrarse" x:Name="btnRegistro" BackgroundColor="#4ecdc4" CornerRadius="10" TextColor="White" Clicked="btnRegistro_Clicked" />
                </StackLayout>
            </Grid>
        </Grid>
        
    </ContentPage.Content>
    
</ContentPage>
